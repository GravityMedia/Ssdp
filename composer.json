{
    "name": "gravitymedia/ssdp",
    "description": "Simple Service Discovery Protocol (SSDP) library for PHP",
    "homepage": "https://github.com/GravityMedia/Ssdp",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel SchrÃ¶der",
            "email": "daniel.schroeder@gravitymedia.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.6",
        "gravitymedia/urn": "~0.1",
        "guzzle/http": "~3.9",
        "rhumsaa/uuid": "~2.8",
        "symfony/event-dispatcher": "~2.8"
    },
    "require-dev": {
        "phing/phing": "^2.14",
        "phpunit/phpunit": "^5.3",
        "sami/sami": "^3.2",
        "scrutinizer/ocular": "^1.3",
        "symfony/finder": "^2.8"
    },
    "autoload": {
        "psr-4": {
            "GravityMedia\\Ssdp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GravityMedia\\SsdpTest\\": "tests/src/"
        }
    },
    "scripts": {
        "test": "php vendor/bin/phing test",
        "doc": "php vendor/bin/phing doc"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "archive": {
        "exclude": [
            "/.*",
            "/*.php",
            "/build.*",
            "/composer.*",
            "/phpunit.*",
            "/tests"
        ]
    }
}
